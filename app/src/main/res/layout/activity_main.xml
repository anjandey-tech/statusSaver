<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:background="#F9F7FF">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                     <RelativeLayout
                         android:id="@+id/rel"
                         android:layout_width="match_parent"
                         android:layout_height="250dp"
                         android:background="#F4D168">

                         <ImageView
                             android:id="@+id/logo"
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:src="@drawable/logo"
                             android:layout_centerInParent="true"/>

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/app_name"
                             android:layout_below="@id/logo"
                             android:layout_centerHorizontal="true"
                             android:textSize="25sp"
                             android:textColor="@color/black"
                             android:textStyle="italic"
                             android:layout_marginTop="10dp" />


                     </RelativeLayout>



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rel"
                    android:padding="12dp"
                     android:orientation="vertical">



                    <RelativeLayout
                          android:id="@+id/shareChat"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/rectangle"
                        android:layout_marginHorizontal="10dp"
                        android:elevation="3dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/sharechatlogo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/sharechat"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/sharechatlogo"
                                android:layout_toLeftOf="@+id/sharechatarr">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="sharechat"
                                   android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"

                                    android:layout_marginLeft="12dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="download"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"

                                    android:layout_marginLeft="12dp"/>



                            </LinearLayout>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/sharechatarr"/>





                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/whatApp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/rectangle"
                        android:layout_marginHorizontal="10dp"
                        android:elevation="3dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/whatapplogo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/whatsapp_logo"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/whatapplogo"
                                android:layout_toLeftOf="@+id/whatapparr">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="whatapp"
                                   android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"

                                    android:layout_marginLeft="12dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="download"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"

                                    android:layout_marginLeft="12dp"/>



                            </LinearLayout>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/whatapparr"/>





                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/faceBook"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/rectangle"
                        android:layout_marginHorizontal="10dp"
                        android:elevation="3dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/facebooklogo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/fb"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/facebooklogo"
                                android:layout_toLeftOf="@+id/facebookarr">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="facebook"
                                   android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"

                                    android:layout_marginLeft="12dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="download"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"

                                    android:layout_marginLeft="12dp"/>



                            </LinearLayout>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/facebookarr"/>





                    </RelativeLayout>



                </LinearLayout>





            </RelativeLayout>





        </ScrollView>




    </RelativeLayout>
</layout>